<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/firsFragment"
        android:name="com.messages.abdallah.mymessages.ui.fragments.FirstFragment"
        android:label="@string/aa"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firsFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.messages.abdallah.mymessages.ui.fragments.SecondFragment"
        android:label="@string/aa"
        tools:layout="@layout/fragment_second" >
        <argument
            android:name="id"
            app:argType="integer" />
<!--        <argument-->
<!--            android:name="msgType"-->
<!--            app:argType="string" />-->
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.messages.abdallah.mymessages.ui.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.messages.abdallah.mymessages.ui.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_firsFragment"
            app:destination="@id/firsFragment" />
    </fragment>
</navigation>